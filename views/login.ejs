<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/login.css">
  </head>
  <body>
    <div class="contenido-bloqueado">
        <p>Acceso denegado! Falta completar algun area!</p>
    </div>
    <div class="contenedor-formulario">
      <form class="box form-inline my-2 my-lg-0" action="/validarUsuarioPassword" method="post">
        <h1>Login</h1>
        <input class="form-control mr-sm-2" type="text" name="user" placeholder="Nombre">
        <input id="txtEmail" type="email" name="email" placeholder="Email">
        <input type="hidden" name="fromPage" id="fromPage">
        <input class="form-control mr-sm-2" type="password" id="txtPassword" placeholder="Contraseña" name="password">
      <div class="Men">
          <input type="radio" class="S" name="S" value= "Men">  Men
      </div>
      <br>
      <div class="Wom">
          <input type="radio" class="S" name="S" value= "Women">Women
      </div>
      <br>
      <div class="Ot">
          <input type="radio" class="S" name="S" value= "Other"> Other
      </div>



        <input type="submit" placeholder="Log In">
      </form>
    </div>
    <% if(invalido){%>
    <div class="contenido-bloqueado dos">
        <p>Tu usuario o contraseña es incorrecta</p>
    </div>
  <%}%>



  </body>
</html>

